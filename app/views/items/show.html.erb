<div class="container">
  <div class="row align-items-center my-5">
    <div class="col-lg-7">
      <img class="img-fluid rounded mb-4 mb-lg-0" src="<%= @item.image %>">
    </div>
    <div class="col-lg-5">
      <div>
        <%= link_to(toggle_item_path(@item), id: "like_toggle_#{@item.id}", remote: true) do %>
          <%= render "user_items/like", item: @item %>
        <% end %>
        <h1 class="font-weight-light"><%= @item.title %></h1>
      </div>
      <h2 class="font-weight-light"><%= @item.price %></h2>
      <p><%= @item.content %></p>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#order-modal">Order</button>
    </div>
  </div>

  <div class="card text-white bg-secondary my-5 py-4 text-center">
    <div class="card-body">
      <p class="text-white m-0">related</p>
    </div>
  </div>

  <div class="row">
    <% @recommendations.each do |r| %>
      <div class="col-xs-4 col-md-4">
        <div class="card h-100">
          <div class="card-body">
            <%= link_to r do %>
            <img class="recommendation-img" src="<%= r.image %>">
            <% end %>
            <h5 class="card-title"><%= r.title %></h5>
            <p class="card-text"><%= truncate(r.content, length: 100) %></p>
          </div>
          <div class="card-footer">
            <%= link_to(toggle_item_path(r), id: "like_toggle_#{r.id}", remote: true) do %>
              <%= render "user_items/like", item: r %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <br>

  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#review-modal">Review</button>
  <%= render 'reviews/modal' %>

<br><br>

  <div id="review-append">
    <% @reviews.each do |review| %>
      <%= render 'reviews/review', review: review %>
      <br>
    <% end %>
  </div>
</div>

<br><br><br><br>
