<section class="login-block">
  <div class="_login-container">
    <div class="row">
    <div class="col-md-4 login-sec">
      <h2 class="text-center">Login Now</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"login-form") do |f| %>
        <div class="form-group">
          <%= f.label :email, class:"text-uppercase" %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, class:"text-uppercase" %><br />
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      <div class="copy-text">Mate <i class="fa fa-heart"></i> Mate</div>
    </div>
    <%= render 'devise/shared/carousel' %>
  </div>
</section>
